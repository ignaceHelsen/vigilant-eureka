{
    "eslint.autoFixOnSave": true,
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "standard"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "no-mixed-spaces-and-tabs": "error",
        "indent": [
            "error",
            2
        ],
        "space-before-function-paren": "off"
    }
}